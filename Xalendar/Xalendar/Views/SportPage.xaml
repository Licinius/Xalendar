<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xalendar.Views.SportPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="titre" Text="C'est parti pour "
                HorizontalOptions="CenterAndExpand"
                   FontSize="Medium" />
            <StackLayout VerticalOptions="CenterAndExpand">
            <Label Text="Vous avez fait " FontSize="Large" HorizontalOptions="CenterAndExpand" ></Label>
                <Label x:Name="label" FontSize="Large" HorizontalOptions="CenterAndExpand" />
            <Label Text=" pas !" FontSize="Large" HorizontalOptions="CenterAndExpand" ></Label>
            </StackLayout>
            <Button Text="Stop !" Clicked="Stop"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>